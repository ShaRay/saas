<div class="container">
		<table class="table table-striped table-bordered hover" cellspacing="0" width="100%" id="datatable">
			<thead>
				<th>Avatar</th>
				<th>Slack ID</th>
				<th>Real Name</th>
				<th>Email</th>
				<th></th>
			</thead>
			<tbody>
				<% @slack_users.each do |slack_user| %>
					<tr>
						<td><img src="<%= slack_user.profile['image_24'] %>"></td>
						<td><a href="#<%= slack_user.name %>"><%= slack_user.name %></a></td>
						<td><%= slack_user.profile['real_name'] %></td>
						<td><%= slack_user.profile['email'] %></td>
						<td align="center">
						        <button class="fa fa-ellipsis-v fa-3x" type="button" data-toggle="popover-bottom" data-content="
						            <li><p>Test 1</p></li>
                                    <li><p>Test 2</p></li>"
                                />
                        </td>
					</tr>
				<% end %>
			</tbody>
		</table>
</div>

<script>
    $(document).ready(function() {
        $('#datatable').DataTable({
            "order": [ 1, "asc" ],
            "columnDefs": 
            [{
                "targets": [ 0, 4 ],
                "visible": true,
                "searchable": false,
                "sortable": false
            }]
        });
    } );
</script>