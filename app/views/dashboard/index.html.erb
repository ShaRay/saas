<div class="container">
		<table class="table table-striped table-bordered" cellspacing="0" width="100%" id="datatable">
			<thead>
				<th>Avatar</th>
				<th>Slack ID</th>
				<th>Real Name</th>
				<th>Email</th>
			</thead>
			<tbody>
				<% @slack_users.each do |slack_user| %>
					<tr>
						<td><img src="<%= slack_user.profile['image_24'] %>"></td>
						<td><a href="#<%= slack_user.name %>"><%= slack_user.name %></a></td>
						<td><%= slack_user.profile['real_name'] %></td>
						<td><%= slack_user.profile['email'] %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
</div>

<script>
    $(document).ready(function() {
        $('#datatable').DataTable();
    } );
</script>