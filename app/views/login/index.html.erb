<style>
    body {
        background-color: #ccc !important;
    }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <br />
      <%= form_for(:session, url: login_path, html: {class: 'form-2'}) do |f| %>
        <h1><span class="log-in">Log in</span></h1>
        <p class="float">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, placeholder: 'you@example.com' %>
        </p>

        <p class="float">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password'%>
        </p>

        <p style="height: 50px;">
            <%= f.submit "Log in", id: 'submit' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
